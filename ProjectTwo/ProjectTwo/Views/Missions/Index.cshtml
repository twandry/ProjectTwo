@model IEnumerable<ProjectTwo.Models.Missions>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.missionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.missionPresName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.missionAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.climate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.domReligion)
        </th>
        <th>
            Mission Flag
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.missionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.missionPresName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.missionAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.language)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.climate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.domReligion)
        </td>
        <td>
            <img src="~/Content/@(item.missionID).png" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.missionID }) |
            @Html.ActionLink("Details", "Details", new { id = item.missionID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.missionID })
        </td>
    </tr>
}

</table>
